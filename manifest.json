{
  "manifest_version": 2,
  "name": "TwitchTv Chat Overlay",
  "short_name": "TwitchTvChat",
  "version": "1.0.1",
  
  "description": "Displays chat messages over the video stream allowing viewers to hide the chat display (and extend the video player area!)",
  "icons": { "16": "icon_16.png",
             "48": "icon_48.png",
            "128": "icon_128.png" },
  
  "page_action": {
    "default_icon" : "icons/icon19.png",
    "default_title": "Toggle TwitchTvChat overlay"
  },
  
  "author": "Federico Medina (pardoman)",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/helpers.js", "js/content.js"]
  }],
  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}
