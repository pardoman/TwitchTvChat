{
  "name": "TwitchTvChat",
  "version": "1.0",
  "description": "Chrome Extension that draws twitch user comments over the player's stream.",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["helpers.js", "content.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon" : "icon19.png",
    "default_title": "Toggle TwitchTvChat overlay"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "manifest_version": 2
}
