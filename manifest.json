{
  "name": "TwitchTvChat",
  "version": "1.0",
  "description": "Chrome Extension that draws twitch user comments over the player's stream.",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["helpers.js", "content.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Toggle TwitchTvChat overlay",
	"default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
