{
  "name": "TwitchTvChat",
  "version": "1.0",
  "description": "Chrome Extension that draws twitch user comments over the player's stream.",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/helpers.js", "js/content.js"]
  }],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon" : "icons/icon19.png",
    "default_title": "Toggle TwitchTvChat overlay"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "manifest_version": 2
}
