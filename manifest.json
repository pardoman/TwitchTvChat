{
  "manifest_version": 2,
  "name": "TwitchTvChat",
  "version": "1.0",
  
  "description": "Chrome Extension that draws twitch user comments over the player's stream.",
  "icons": { "16": "icon_16.png",
             "48": "icon_48.png",
            "128": "icon_128.png" },
  
  "page_action": {
    "default_icon" : "icons/icon19.png",
    "default_title": "Toggle TwitchTvChat overlay"
  },
  
  "author": "Federico (pardoman) Medina",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/helpers.js", "js/content.js"]
  }],
  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}
